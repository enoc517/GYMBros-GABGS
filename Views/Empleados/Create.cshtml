@model GYMBros_GABGS.Models.Empleado

@{
    ViewData["Title"] = "Create";
}
<h1>Nuevo</h1>

<h4>Empleado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <h6>Puesto</h6>
                <select asp-for="Idpuesto" class="form-control" asp-items="ViewBag.Idpuesto"></select>
            </div>
            <div class="form-group">
                <h6>Nombre</h6>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h6>Apellidos</h6>
                <input asp-for="Apellidos" class="form-control" />
                <span asp-validation-for="Apellidos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h6>Direccion</h6>
                <input asp-for="Dirreccion" class="form-control" />
                <span asp-validation-for="Dirreccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h6>Telefono</h6>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h6>Cedula</h6>
                <input asp-for="Cedula" class="form-control" />
                <span asp-validation-for="Cedula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h6>Fecha Contratacion</h6>
                <input asp-for="FechaContratacion" class="form-control" />
                <span asp-validation-for="FechaContratacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h6>Fecha de Pago</h6>
                <input asp-for="FechaPago" class="form-control" />
                <span asp-validation-for="FechaPago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h6>CategoriaProfesional</h6>
                <input asp-for="CategoriaProfesional" class="form-control" />
                <span asp-validation-for="CategoriaProfesional" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumSeguridadSocial" class="control-label"></label>
                <input asp-for="NumSeguridadSocial" class="form-control" />
                <span asp-validation-for="NumSeguridadSocial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h6>CuentaBancaria</h6>
                <input asp-for="CuentaBancaria" class="form-control" />
                <span asp-validation-for="CuentaBancaria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h6>RetencionCcss</h6>
                <input asp-for="RetencionCcss" class="form-control" />
                <span asp-validation-for="RetencionCcss" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Create" class="btn btn-success"> <i class="bi bi-plus-circle"> Crear</i></a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-warning"><i class="bi bi-arrow-return-left">Regresar a la Lista</i></a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
